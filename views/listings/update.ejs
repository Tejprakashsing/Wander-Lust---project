<% layout("/layouts/boilerplate.ejs") %>
<body>
    
    <div class="row offset-3">
        <div class="col-8 mt-4">
            <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title: </label>
                    <textarea name="title" id="" class="form-control" required> <%=listing.title%> </textarea>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description: </label>
                    <textarea name="description" id="" class="form-control" required><%=listing.description%></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL: </label>
                    <input type="file" name="image">
                </div>
                
                <div class="row">
                        <div class="mb-3 col-6">
                        <label for="price" class="form-label">Price: </label>
                        <textarea name="price" id="" class="form-control" required><%=listing.price%></textarea>
                    </div>
                    <div class="mb-3 col-6">
                        <label for="country" class="form-label">Country: </label>
                        <textarea name="country" id="" class="form-control" required><%=listing.country%></textarea> </textarea>
                    </div>
                </div>
                <div class="mb-4">
                    <label for="location" class="form-label">Location: </label>
                    <textarea name="location" id="" class="form-control" required><%=listing.location%></textarea> </textarea>
                </div>
                
                <button class="btn btn-dark mb-4 add-btn">edit</button>
            </form>
        </div>
    </div>

</body>